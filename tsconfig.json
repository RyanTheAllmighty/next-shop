{
    "compilerOptions": {
        "target": "es2015",
        "lib": [
            "ES2020"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "preserve",
        "rootDir": ".",
        "isolatedModules": true,
        "noEmit": true,
        "module": "esnext"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "."
    ]
}
